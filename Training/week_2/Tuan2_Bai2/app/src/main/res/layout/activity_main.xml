<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.tuan2ex2.MainActivity">

    <LinearLayout
        android:id="@+id/ImageGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="top"
        android:background="#D6D7D7"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ImageGroup1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <ImageView
                android:id="@+id/Image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/K"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/Image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/E"
                android:padding="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ImageGroup2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/N"
                android:padding="10dp"

                />

            <ImageView
                android:id="@+id/Image4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/N2"
                android:padding="10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/TextGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/Text"
            android:textSize="30sp"
            android:textStyle="italic"
            tools:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/CheckBoxGroup1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <CheckBox
                android:id="@+id/checkBoxK"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:button="@drawable/custom_checkbox"
                android:checked="false"
                android:text="@string/K"
                android:textAlignment="viewStart"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <CheckBox
                android:id="@+id/checkBoxE"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:button="@drawable/custom_checkbox"
                android:checked="false"
                android:text="@string/E"
                android:textSize="30sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CheckBoxGroup2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/checkBoxN"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:button="@drawable/custom_checkbox"
                android:checked="false"
                android:text="@string/N"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <CheckBox
                android:id="@+id/checkBoxN2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:button="@drawable/custom_checkbox"
                android:checked="false"
                android:text="@string/N2"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

