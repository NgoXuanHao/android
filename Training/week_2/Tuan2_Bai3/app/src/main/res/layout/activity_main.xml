<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.tuan2ex3.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <ImageView
            android:id="@+id/ImageViewPhotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/meo"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TextGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Text"
            android:textSize="30sp"
            android:textStyle="italic"
            tools:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="5dp">

        <RadioGroup
            android:id="@+id/RadioGroupPhotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/rbtn_cat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/Cat"
                android:textSize="30sp"
                />

            <RadioButton
                android:id="@+id/rbtn_dog"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/Dog"
                android:textSize="30sp"
                />

            <RadioButton
                android:id="@+id/rbtn_dragon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/Dragon"
                android:textSize="30sp"
                />

            <RadioButton
                android:id="@+id/rbtn_bike"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/Bike"
                android:textSize="30sp" />


        </RadioGroup>
    </LinearLayout>

</LinearLayout>
